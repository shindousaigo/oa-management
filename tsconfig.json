{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
      // "chai",
      // "jest",
      // "mocha",
    ],
    "paths": {
      "src/*": [
        "src/*"
      ],
      "apollo-server/*": [
        "apollo-server/*"
      ],
      "types/*": [
        "types/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "types/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    // "tests/**/*.ts",
    // "tests/**/*.tsx",
    "apollo-server/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}